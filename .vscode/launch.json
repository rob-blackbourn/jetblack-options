    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Current File",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "justMyCode": true
        },
        {
            "name": "mkdocs build",
            "type": "python",
            "request": "launch",
            "args": ["build"],
            "program": "${workspaceFolder}/.venv/bin/mkdocs",
            "console": "integratedTerminal",
            "justMyCode": false
        }
    ]
}